<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_margin="5dp"
    android:background="@drawable/common_searchbox_home_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableLeft="@drawable/main_icon_searchbox"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="@string/search_hint"
        android:padding="12dp"
        android:textSize="18sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="@drawable/distance_line" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/main_searchbox_voice_selector"
        android:contentDescription="@null"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:src="@drawable/main_icon_voice" />

</LinearLayout>