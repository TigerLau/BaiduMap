<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/bmapview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/common_searchbox_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        layout="@layout/common_searchbox_home" />

    <include
        android:id="@+id/common_navigation_home2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        layout="@layout/common_navigation_home2" />

    <com.tigerlau.maptest.ui.ZoomControlView
        android:id="@+id/zoomcontol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/common_navigation_home2"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="7dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/locatebtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@id/common_navigation_home2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/main_locatebutton"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/main_icon_follow"
        android:visibility="gone" />

</RelativeLayout>