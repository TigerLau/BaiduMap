<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><rotate android:fromDegrees="-90.0" android:drawable="@drawable/main_topbtn_down"/></item>
            <item android:bottom="10dp" android:drawable="@drawable/main_icon_zoomin" android:left="7dp" android:right="7dp" android:top="10dp"></item>
        </layer-list></item>
    <item android:state_enabled="false"><layer-list>
            <item><rotate android:fromDegrees="-90.0" android:drawable="@drawable/main_topbtn_up"/></item>
            <item android:bottom="10dp" android:drawable="@drawable/main_icon_zoomin_dis" android:left="7dp" android:right="7dp" android:top="10dp"></item>
        </layer-list></item>
    <item><layer-list>
            <item><rotate android:drawable="@drawable/main_topbtn_up" android:fromDegrees="-90.0" />
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/main_icon_zoomin" android:left="7dp" android:right="7dp" android:top="10dp"></item>
        </layer-list></item>

</selector>