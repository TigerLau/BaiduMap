<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="5dp"
    android:background="@drawable/common_searchbox_home_bg" >

    <ImageButton
        android:id="@+id/speak_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_searchbox_voice_selector"
        android:contentDescription="@null"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="12dp"
        android:src="@drawable/main_icon_voice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/speak_btn"
        android:layout_toStartOf="@id/speak_btn"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/searchedit"
            android:onClick="clickToSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/main_icon_searchbox"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/main_icon_searchbox"
            android:focusable="false"
            android:hint="@string/search_hint"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/distance_line" />
    </LinearLayout>

</RelativeLayout>