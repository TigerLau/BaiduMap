<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="0dp" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/common_icon_back_btn_selector" />

        <ImageButton
            android:id="@+id/common_speak_btn"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_searchbox_voice_selector"
            android:contentDescription="@null"
            android:src="@drawable/main_icon_voice" />

        <EditText
            android:id="@+id/common_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/common_speak_btn"
            android:layout_toRightOf="@id/back_btn"
            android:background="@drawable/search_box"
            android:drawableLeft="@drawable/common_icon_searchbox_magnifier_2"
            android:drawablePadding="10dp"
            android:hint="@string/common_search_hint"
            android:padding="10dp"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:padding="5dp" >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF" >
        </ListView>
    </LinearLayout>

</LinearLayout>